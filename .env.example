# WooCommerce REST API
# Generate at: WP Admin → WooCommerce → Settings → Advanced → REST API
WC_API_URL="https://example.com/wp-json/wc/v3"
WC_CONSUMER_KEY="ck_your_consumer_key_here"
WC_CONSUMER_SECRET="cs_your_consumer_secret_here"

# WordPress Media Upload (Application Password)
# Generate at: WP Admin → Users → Profile → Application Passwords
WP_MEDIA_URL="https://example.com/wp-json/wp/v2/media"
WP_USER="admin"
WP_APP_PASSWORD="xxxx xxxx xxxx xxxx xxxx xxxx"

# Local path to product image assets
ASSETS_DIR="./assets"
